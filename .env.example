########################################
# Entorno y logging
########################################
NODE_ENV=dev
LOG_LEVEL=debug

########################################
# Localización
########################################
TIMEZONE=America/Mexico_City
LOCALE=es-MX

########################################
# Rutas y moneda
########################################
DATA_DIR=04-artifacts
CURRENCY=MXN

########################################
# Reglas de riesgo
########################################
MIN_ODDS=1.5
MAX_STAKE_PCT=0.05
# DAILY_RISK_CAP_PCT=0.15   # opcional: tope de riesgo diario (0–1)

########################################
# Resiliencia
########################################
REQUEST_TIMEOUT_MS=60000
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_MS=800

########################################
# Fuentes y features
########################################
FEATURE_SOURCES=caliente,sportmonks
USE_KELLY=true
SAFE_MODE=true
DRY_RUN=true

########################################
# Proxies
########################################
PROXY_PROVIDER=webshare
PROXY_ROTATE=true
# Lista coma-separada; ejemplo Webshare:
# PROXY_URL_LIST=http://user:pass@host1:port,http://user:pass@host2:port
PROXY_URL_LIST=
# Fallback único (si no usas lista):
# HTTP_PROXY=http://user:pass@host:port
HTTP_PROXY=

########################################
# Precisión numérica
########################################
PROB_DECIMALS=4
STAKE_DECIMALS=2

# EXPORT / UPLOAD TARGET (none | github | supabase | s3)
EXPORT_UPLOAD_TARGET=none
# GITHUB_TOKEN=...
# GITHUB_REPO=owner/name
# SUPABASE_URL=...
# SUPABASE_KEY=...
# SUPABASE_BUCKET=...
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# AWS_S3_BUCKET=...
